<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rowTitle"
        android:layout_width="@dimen/title_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginEnd="@dimen/column_spacing"
        android:layout_marginRight="@dimen/column_spacing"
        android:textSize="@dimen/title_font_size"
        android:textColor="@color/colorMainDetail"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/rowDetailOne"
        android:layout_width="@dimen/detail_width"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/column_spacing"
        android:layout_marginRight="@dimen/column_spacing"
        android:textSize="@dimen/detail_font_size"/>

    <TextView
        android:id="@+id/rowDetailTwo"
        android:layout_width="@dimen/detail_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_font_size"/>
</LinearLayout>